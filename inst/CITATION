citHeader("To cite pinochet in publications use")

citEntry(entry = "Manual",
        title = "{pinochet}: Data About the Victims of the Pinochet Regime, 1973-1990",
        author = personList(as.person("Danilo Freire"),
        as.person("Lucas Mingardi"),
        as.person("Robert McDonnell")),
        year = "2019",
        note = "R package version 0.1.0",
        url = "https://CRAN.R-project.org/package=pinochet",
        textVersion  = paste("Danilo Freire, Lucas Mingardi and Robert McDonnell (2019).","pinochet: Data About the Victims of the Pinochet Regime, 1973-1990.","URL https://github.com/danilofreire/pinochet.")
)
